<zero-grid-pro
  enable-row-flashing
  enable-cell-flashing
  >
  <grid-pro-genesis-datasource
    resource-name="{{config.resourceName}}"
    {{#if config.snapshot}}
    isSnapshot="{{config.snapshot}}"
    {{/if}}
    {{#if config.reqrep}}
    :datasourceConfig=${() => ({pollingInterval: 5000 })}
    {{/if}}
    {{#if config.gridOptions}}
    :deferredGridOptions=${() => (
      {{{config.gridOptions}}}
    )}
    {{/if}}
  >
  </grid-pro-genesis-datasource>
  {{#if config.fdc3EventConfig}}
  <fdc3-channel-event
    event-name="rowClicked"
    channel-name="{{config.fdc3EventConfig.channelName}}"
    channel-type="{{config.fdc3EventConfig.channelType}}"
  >
  </fdc3-channel-event>
  {{/if}}
</zero-grid-pro>
