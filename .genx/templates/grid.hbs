<zero-grid-pro
  enable-row-flashing
  enable-cell-flashing
  >
  <grid-pro-genesis-datasource
    resource-name="{{config.resourceName}}"
    {{#if config.snapshot}}
    isSnapshot="{{config.snapshot}}"
    {{/if}}
    {{#if config.reqrep}}
    :datasourceConfig=${() => ({pollingInterval: 5000 })}
    {{/if}}
    {{#if config.gridOptions}}
    :deferredGridOptions=${() => (
      {{{config.gridOptions}}}
    )}
    {{/if}}
  >
    {{#if config.fdc3EventConfig}}
    <fdc3-channel-event event-name="onRowClicked" channel-name="{{ fdc3EventConfig.channelName }}" channel-type="{{ fdc3EventConfig.channelType }}"></fdc3-channel-event>
    {{/if}}
  </grid-pro-genesis-datasource>
</zero-grid-pro>
